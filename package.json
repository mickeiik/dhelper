{
  "name": "dhelper",
  "description": "DHelper",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": {
    "email": "dkenan.mickael@gmail.com",
    "name": "Mickeiik",
    "url": "https://mickeiik.github.io"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/@tools/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "compile-nobuild": "electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "vitest": "vitest",
    "vitest-ui": "vitest --ui",
    "start": "node packages/dev-mode.js",
    "typecheck": "npm run typecheck -ws --if-present",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install",
    "create-tool": "node packages/create-tool.js",
    "db:reset": "node scripts/reset-database.js"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "1.54.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "24.1.0",
    "@types/sqlite3": "^3.1.11",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "create-vite": "7.0.3",
    "electron": "37.2.4",
    "electron-builder": "26.0.12",
    "glob": "^11.0.3",
    "playwright": "^1.54.1"
  },
  "dependencies": {
    "@app/main": "*",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@u4/opencv-build": "^1.1.1",
    "@u4/opencv4nodejs": "^7.1.2",
    "detect-libc": "^2.0.4",
    "electron-updater": "6.6.2",
    "node-gyp": "^11.2.0",
    "screenshot-desktop": "^1.15.2",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^5.1.1",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  },
  "opencv4nodejs": {
    "disableAutoBuild": "1",
    "OPENCV_INCLUDE_DIR": "C:\\opencv\\build\\include",
    "OPENCV_LIB_DIR": "C:\\opencv\\build\\x64\\vc16\\lib",
    "OPENCV_BIN_DIR": "C:\\opencv\\build\\x64\\vc16\\bin"
  }
}
